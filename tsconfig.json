{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["@playwright/test", "node"],
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "global.d.ts",
    "playwright.config.ts",
    "tests/**/*.ts",
    "fixtures/**/*.ts",
    "helpers/**/*.ts"
  ]
}
